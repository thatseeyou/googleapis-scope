{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "noImplicitAny": true,
    "noImplicitUseStrict": false,
    "removeComments": false,
    "listFiles": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "types/*"
      ]
    },
    "sourceMap": true,
	"rootDir": "src",
	"outDir": "build"
  },
  "include": [
	"src/**/*"
  ],
  "compileOnSave": true,
  "buildOnSave": false
}
